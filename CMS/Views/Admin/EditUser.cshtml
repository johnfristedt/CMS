@model CMS.Models.ViewModels.EditViewModels.EditUserViewModel

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit User</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Users, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("User", Model.Users, new { @id = "user-select" })
                <span id="edit-user-success" class="col-lg-1"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserRoles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("AvailableRoles", Model.AvailableRoles, new { @id = "available-roles", @class = "role-box" })
                <table class="listbox-buttons">
                    <tr>
                        <td>
                            <input type="button" value=">" id="add-role" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="button" value="<" id="remove-role" />
                        </td>
                    </tr>
                </table>
                @Html.ListBox("UserRoles", Model.UserRoles, new { @id = "user-roles", @class = "role-box" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Update" class="btn btn-default" id="submit-user-update" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/admin-edit-user.js"></script>
}
